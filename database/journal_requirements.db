  "citation_styles": {
    "Nature format": {
      "type": "numbered",
      "example": "Smith, J. Nature 123, 456-789 (2023).",
      "notes": "Abbreviated journal names, no issue numbers"
    },

    "Science format": {
      "type": "numbered", 
      "example": "J. Smith, Science 123, 456 (2023).",
      "notes": "Very abbreviated, page numbers without dash"
    },

    "APA": {
      "type": "author-date",
      "example": "Smith, J. (2023). Title. Journal Name, 123(4), 456-789.",
      "notes": "Full journal names"
    },

    "IEEE": {
      "type": "numbered",
      "example": "[1] J. Smith, \"Title,\" Journal Name, vol. 123, no. 4, pp. 456-789, 2023.",
      "notes": "Quoted article titles"
    },

    "MLA": {
      "type": "author-page",
      "example": "Smith, John. \"Title.\" Journal Name, vol. 123, no. 4, 2023, pp. 456-789.",
      "notes": "Full names, quoted titles"
    },

    "Vancouver": {
      "type": "numbered",
      "example": "Smith J. Title. Journal Name. 2023;123(4):456-89.",
